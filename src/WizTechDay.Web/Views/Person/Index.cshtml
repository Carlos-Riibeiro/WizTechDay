@model IEnumerable<WizTechDay.Domain.Models.PersonModel>

@{
    ViewData["Title"] = "Person";
    var count = 0;
}

<h1 id="subtitle-person">Lista de pessoas</h1>

<p>
    <a asp-action="Create">Create Person</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="bory-person">
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a href="/Person/Edit/@item.Id" id="edit-person+@count" class="btn">Editar</a>
                </td>
                <td>
                    <a href="/Person/Delete/@item.Id" id="delete-person+@count"  class="btn">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
